<body>
{% spaceless %}{{ react_component('Menu') }}{% endspaceless%}

<div class="main-container">
    <div class="container">
        <div class="row">
            <div id="header-products">
                {% spaceless %}{% block body %}{% endblock %}{% endspaceless%}
            </div>
        </div>
    </div>

</div>

{% block javascripts %}
    <script>
        {# set a base url to '/' or maybe '/app_dev.php' #}
        window.baseUrl = '{{ path('homepage') }}';
    </script>
    {% if app.environment == "dev" %}
    <script src="{{ asset('webpack-dev-server.js', 'webpack') }}"></script>
    {% endif %}
    <script src="{{ asset('assets/build/client-bundle.js', 'webpack') }}"></script>
{% endblock %}
{{ react_component('GlobalFunctions') }}
</body>
</html>
