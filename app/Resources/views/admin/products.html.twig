{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center" style="font-family: 'Lato'; font-size: 48px;">All Products</h1>
    <hr style="width:70%">
    <div class="products">
        <table id="product-table" class="table table-striped table-responsive">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Sale Price</th>
                <th>Image</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <th scope="row">{{ product.id }}</th>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.salePrice }}</td>
                    <td>{{ product.image }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
